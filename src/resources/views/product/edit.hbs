<div class="mt-6">
    <form method="POST" action="/product/{{popular._id}}/update?_method=PUT">
        <div class="mb-3 form-check">
            <label class="form-check-label" for="name">Name</label>
            <input type="text" class="form-control" value="{{popular.name}}" id="name" name="name"/>
        </div>
        <div class="mb-3 form-check">
            <label class="form-check-label" for="itemTitle">Title</label>
            <textarea class="form-control" id="itemTitle" name="itemTitle">{{popular.itemTitle}}</textarea>
        </div>
        <div class="d-flex col-12">
            <div class="mb-3 form-check">
                <label class="form-check-label" for="itemPrice">Price</label>
                <div class="d-flex ">
                    <input type="text" class="form-control" value="{{popular.itemPrice}}" id="itemPrice" name="itemPrice"/>
                </div>
            </div>
            <div class="mb-3 form-check">
                <label class="form-check-label" for="currency">Currency</label>
                <div class="d-flex ">
                    <input type="text" class="form-control" value="{{popular.currency}}" id="currency" name="currency"/>
                </div>
            </div>
        </div>

        <div class="mb-3 form-check">
            <label class="form-check-label" for="videoId">VideoId</label>
            <input type="text" class="form-control" value="{{popular.videoId}}" id="videoId" name="videoId"/>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
